<h1>Recipes</h1>

<% @recipes.each do |recipe| %>
  <h3><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></h3>
  <p><%= recipe.description %></p>
  <% if recipe.image.attached? %>
    <div class="recipe_image" id="recipe_image_<%= recipe.id %>">
      <%= image_tag recipe.image, class: "recipe_image_index", height: '150' %>
    </div>
  <% end %>
<% end %>
