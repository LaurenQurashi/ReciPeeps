<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %><br><br>
        <%= @user.description %>
      </h1>
      <%= button_to "Log Out", logout_path, method: :delete %>
      <li><%= link_to "Settings", edit_user_path(current_user) %></li>
    </section>
  </aside>
</div>
